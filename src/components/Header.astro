---
import HeaderLink from "./HeaderLink.astro";
---

<header class="header">
  <div class="container container--wide">
    <div class="header__inner">
      <div class="header__logo">
        <a href="/" aria-label="Strona główna Web Web Club">
          <div class="logo">
            <span>w</span>
            <span>e</span>
            <span>b</span>
            <span>w</span>
            <span>e</span>
            <span>b</span>
          </div>
        </a>
      </div>

      <nav class="nav">
        <ul class="nav__list">
          <li>
            <HeaderLink href="/o-mnie">O mnie</HeaderLink>
          </li>
          <li>
            <HeaderLink href="/kontakt"> Kontakt</HeaderLink>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</header>

<style lang="scss">
  .header {
    padding: 1rem 0;

    &__inner {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;

      @media (min-width: 768px) {
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
      }
    }

    &__logo {
      position: relative;
      display: block;
      font-size: 3rem;
      line-height: 1;

      @media (min-width: 768px) {
        font-size: 4rem;
      }

      a {
        color: currentColor;
        text-decoration: none;
      }
    }
  }

  .nav {
    &__list {
      display: flex;
      align-items: center;
      gap: 1rem;
      font-weight: 600;
      white-space: nowrap;

      @media (min-width: 768px) {
        gap: 1.5rem;
      }
    }
  }

  .logo {
    display: flex;
    font-weight: 700;
    font-size: 48px;
    line-height: 1;
    letter-spacing: -0.01em;

    span {
      transition: 0.2s ease;

      &:nth-child(1),
      &:nth-child(4) {
        transform: rotate(6deg);
      }

      &:nth-child(2),
      &:nth-child(5) {
        transform: rotate(8deg);
      }

      &:nth-child(3),
      &:nth-child(6) {
        transform: rotate(-8deg);
      }
    }

    &:hover {
      span {
        &:nth-child(1),
        &:nth-child(4) {
          transform: rotate(-6deg);
        }

        &:nth-child(3),
        &:nth-child(6) {
          transform: rotate(6deg);
        }
      }
    }
  }
</style>
