---
import BaseLayout from "../layouts/BaseLayout.astro";
import FormattedDate from "../components/FormattedDate.astro";

const { title, pubDate, updatedDate } = Astro.props;
---

<BaseLayout>
  <div class="container">
    <header class="post-header">
      <h1 class="post-header__title">{title}</h1>
      <p>Opublikowano: <FormattedDate date={pubDate} /></p>
      {
        updatedDate && (
          <p>
            Ostatnie zmiany: <FormattedDate date={updatedDate} />
          </p>
        )
      }
    </header>
    <div class="post-content">
      <slot />
    </div>
  </div>
</BaseLayout>

<style lang="scss">
  .post-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 3rem 0;
    text-align: center;

    &__title {
      max-width: 20ch;
      font-size: clamp(2rem, 6vw, 4rem);
      line-height: 1.15;
    }
  }

  .post-content {
    max-width: 50ch;
    margin: 0 auto;
    font-size: 1.25rem;
  }
</style>
