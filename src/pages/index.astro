---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<BaseLayout>
  <div class="container">
    <!-- <h2>Latest posts</h2> -->
    <ul class="posts-list">
      {
        posts.map((post) => (
          <li>
            <div class="post-card">
              <a class="post-card__link" href={`/blog/${post.slug}/`}>
                <h3 class="post-card__title">{post.data.title}</h3>
              </a>
              <FormattedDate date={post.data.pubDate} />
              <p class="post-card__excerpt">Lorem ipsum dolor amet</p>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</BaseLayout>

<style lang="scss">
  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    list-style-type: none;
    padding: 2rem 0;
    margin: 0;
  }

  .post-card {
    &__link {
      color: inherit;
      text-decoration: none;
    }

    &__title {
      margin-bottom: 0;
      font-size: 1.5rem;
      line-height: 1.2;

      @media (min-width: 768px) {
        font-size: 3rem;
        line-height: 1.1;
      }
    }
  }
</style>
